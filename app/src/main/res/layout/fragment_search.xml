<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <android.support.design.widget.TabLayout
           android:id="@+id/tabs_ID"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.design.widget.TabItem
               android:id="@+id/by_Text_ID"
               android:layout_width="wrap_content"
               android:onClick="loadSearchByTextRV"
               tools:ignore="OnClick"
               android:layout_height="wrap_content"
               android:text="@string/tab1_TEXT_SEARCH" />

           <android.support.design.widget.TabItem
               android:id="@+id/by_Location_ID"
               android:layout_width="wrap_content"
               android:onClick="loadNearbyRV"
               tools:ignore="OnClick"
               android:layout_height="wrap_content"
               android:text="@string/tab2_LOCATION" />



       </android.support.design.widget.TabLayout>
<RelativeLayout
    android:id="@+id/search_layout_ID"
    android:layout_below="@id/tabs_ID"
    android:background="@drawable/search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SearchView
        android:id="@+id/search_Bar_ID"
        android:queryHint="@string/search_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>

       <RelativeLayout

           android:layout_below="@+id/search_layout_ID"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <android.support.v7.widget.RecyclerView
               android:id="@+id/search_recyclerView_ID"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="8dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_centerInParent="true" />
       </RelativeLayout>


   </RelativeLayout>


</RelativeLayout>