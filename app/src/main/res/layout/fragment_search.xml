<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

        <RelativeLayout
    android:id="@+id/search_layout_ID"
            android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/search_Bar_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:queryHint="@string/search_hint" />

            <Button
                android:id="@+id/search_by_Text_ID"
                android:layout_width="wrap_content"
                android:layout_below="@+id/search_Bar_ID"
                android:layout_height="wrap_content"
                android:text="@string/tab1_TEXT_SEARCH" />

            <Button
                android:id="@+id/search_nearby_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/search_Bar_ID"
                android:text="@string/tab2_LOCATION"
                android:layout_alignParentRight="true" />



        </RelativeLayout>

       <RelativeLayout

           android:layout_below="@+id/search_layout_ID"
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <android.support.v7.widget.RecyclerView
               android:id="@+id/search_recyclerView_ID"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="8dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_centerInParent="true" />
       </RelativeLayout>




</LinearLayout>