<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_list_row_ID"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_edge"
            android:padding="15dp">

            <TextView
                android:id="@+id/address_title_row_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address_Full_row_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_title_row_ID"
                android:paddingTop="5dp"
                android:text="@string/full_address_View"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/latitude_row_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_Full_row_ID"
                android:paddingTop="5dp"
                android:text="@string/latitude"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/longitude_row_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/latitude_row_ID"
                android:paddingTop="5dp"
                android:text="@string/longitude"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/altitude_row_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/longitude_row_ID"
                android:paddingTop="5dp"
                android:text="@string/altitude"
                android:textSize="12sp" />


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/altitude_row_ID"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editBTN_row_ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"

                    android:background="@android:drawable/ic_menu_edit" />

                <Button
                    android:id="@+id/deleteBTN_row_ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/ic_delete" />

            </TableRow>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>